require 'sidekiq'
require 'sidekiq/web'

Sidekiq::Web.use(Rack::Auth::Basic) do |user, password|
    [user, password] == ['admin', ENV['<%= "#{GEM_SET}_SIDEKIQ_PASSWORD" %>'] || 'qqqqqqqq']
end

Sidekiq.configure_server do |config|
  config.average_scheduled_poll_interval = 2
end

Sidekiq.configure_server do |config|
  config.redis = { url: ENV['REDIS_URL'] || 'redis://127.0.0.1:6379', namespace: '<%= GEM_SET %>' }
end

Sidekiq.configure_client do |config|
  config.redis = { url: ENV['REDIS_URL'] || 'redis://127.0.0.1:6379', namespace: '<%= GEM_SET %>' }
end

